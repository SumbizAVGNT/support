# ===== Chatwoot Rails (production) =====
# Generate with: openssl rand -hex 64
SECRET_KEY_BASE=replace_with_lengthy_secure_hex

FRONTEND_URL=https://chatwoot.example.com
ASSET_CDN_HOST=
FORCE_SSL=true
ENABLE_ACCOUNT_SIGNUP=false

# ===== Redis =====
REDIS_PASSWORD=change_me_redis_password
REDIS_URL=redis://:change_me_redis_password@redis:6379

# ===== Postgres =====
POSTGRES_DATABASE=chatwoot
POSTGRES_HOST=postgres
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=change_me_pg_password

# ===== Rails =====
RAILS_ENV=production
RAILS_MAX_THREADS=5
RAILS_LOG_TO_STDOUT=true
LOG_LEVEL=info
LOG_SIZE=500

# ===== Email (SMTP) =====
ENABLE_EMAIL_NOTIFICATIONS=true
MAILER_SENDER_EMAIL=noreply@example.com
SMTP_DOMAIN=example.com
SMTP_ADDRESS=mail.example.com
SMTP_PORT=587
SMTP_USERNAME=noreply@example.com
SMTP_PASSWORD=change_me_smtp_password
SMTP_AUTHENTICATION=login
SMTP_ENABLE_STARTTLS_AUTO=true
SMTP_SSL=false
SMTP_OPENSSL_VERIFY_MODE=none

# ===== Storage â€” MinIO (S3-compatible) =====
ACTIVE_STORAGE_SERVICE=amazon
S3_BUCKET_NAME=chatwoot
AWS_ACCESS_KEY_ID=chatwoot
AWS_SECRET_ACCESS_KEY=change_me_minio_secret
AWS_REGION=us-east-1
S3_BUCKET_ACCESS_KEY_ID=chatwoot
S3_BUCKET_SECRET_ACCESS_KEY=change_me_minio_secret
STORAGE_ENDPOINT=http://minio:9000
STORAGE_FORCE_PATH_STYLE=true
STORAGE_URL=https://chatwoot.example.com/storage

# ===== Mobile / Push =====
IOS_APP_ID=L7YLMN4634.com.chatwoot.app
ANDROID_BUNDLE_ID=com.chatwoot.app
ANDROID_SHA256_CERT_FINGERPRINT=
ENABLE_PUSH_RELAY_SERVER=true

# ===== Misc =====
DIRECT_UPLOADS_ENABLED=true
