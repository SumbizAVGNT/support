# === Telegram ===
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_WEBHOOK_PUBLIC_URL=https://telegram-webhook.moonrein.net
TELEGRAM_ALLOWED_UPDATES=message,edited_message,callback_query
TELEGRAM_WEBAPP_URL=https://telegram-webhook.moonrein.net/miniapp
SHOW_WEBAPP_BUTTON=true

# === Chatwoot ===
CHATWOOT_BASE_URL=https://chatwoot.moonrein.net
CHATWOOT_ACCOUNT_ID=1
CHATWOOT_INBOX_ID=5

# Devise Token Auth
CHATWOOT_ACCESS_TOKEN=your-chatwoot-access-token
CHATWOOT_CLIENT=your-chatwoot-client
CHATWOOT_UID=your-chatwoot-uid

# HMAC Webhook Signature
CHATWOOT_HMAC_TOKEN=your-chatwoot-hmac-secret

# === File Proxy / ActiveStorage ===
PUBLIC_HOST=https://chatwoot.moonrein.net
HOST_REWRITE_MAP=https://172.18.0.1->https://chatwoot.moonrein.net
FILE_PROXY_FETCH_BASE=http://127.0.0.1:5501
FILE_PROXY_PUBLIC_BASE=https://telegram-webhook.moonrein.net
INTERNAL_FETCH_BASE=http://rails:5001
CF_ACCESS_CLIENT_ID=
CF_ACCESS_CLIENT_SECRET=

# === Logging ===
LOG_LEVEL=INFO
LOG_JSON=true
LOG_BODY_MAX=4000
REDACT_KEYS=authorization,api_access_token,access-token,client,uid,token,secret,password
